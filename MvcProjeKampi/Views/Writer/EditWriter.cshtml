@model EntityLayer.Concrete.Writer
@{
    ViewBag.Title = "EditWriter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Editing Writer Page</h2>

@using (Html.BeginForm("EditWriter", "Writer", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Writer ID")
        @Html.TextBoxFor(x => x.WriterID, new { @class = "form-control" })
        <br />
        @Html.Label("Writer Name")
        @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
        <br />
        @Html.Label("Writer Surname")
        @Html.TextAreaFor(x => x.WriterSurname, new { @class = "form-control" })
        @Html.Label("About the Writer")
        @Html.TextAreaFor(x => x.AboutWriter, new { @class = "form-control" })
        <br />
        <br />
        @Html.Label("Writer Mail")
        @Html.TextAreaFor(x => x.WriterMail, new { @class = "form-control" })
        <br />
        @Html.Label("Writer Password")
        @Html.TextAreaFor(x => x.WriterPassword, new { @class = "form-control" })
        <br />
        <br />
        @Html.Label("Writer Title")
        @Html.TextAreaFor(x => x.WriterTitles, new { @class = "form-control" })
        <br />
        <br />
        <button class="btn btn-success"> Update the Writer Profile </button>
    </div>
}
