@using EntityLayer.Concrete
@model List<Category>


@{
    Layout = null;
}

<!DOCTYPE html>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Category Name</th>
        <th>Status</th>
        
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryStatus</td>
           
        </tr>
            }
     


        <button class="btn btn-primary" href="/Category/AddCategory">New Category</button>
        <button class="btn btn-warning">Category List</button>

    </table>